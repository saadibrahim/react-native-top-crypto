{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 100
      }
    ],
    "global-require": 0,
    "import/prefer-default-export": 0,
    "no-undef": 0,
    "react/destructuring-assignment": 0,
    "react/prefer-stateless-function": 0,
    "class-methods-use-this": 0
  },
  "plugins": ["prettier"]
}
